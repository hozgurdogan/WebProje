@using RezervasyonUcak.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    var currentUser = ViewBag.CurrentUser as User;


}

<!DOCTYPE html>
<html lang="en">
<head>



    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dropdown Sidebar - Tivotal</title>

    <!--font awesome-->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />

    <!--css file-->
    <link rel="stylesheet" href="~/css/panel.css" />
</head>
<body>
    <div class="sidebar close">
        <li>
            <span style="color:white;font-size:12px;font-weight:500;padding:10px;">@currentUser.Name @currentUser.Surname</span>


        </li>


        <ul class="nav-list">


            <li>
                <div class="icon-link">
                    <a href="#">
                        <i class="fab fa-blogger"></i>
                        <span class="link-name">Müşteri Verileri</span>
                    </a>
                    <i class="fas fa-caret-down arrow"></i>
                </div>
                <ul class="sub-menu">
                    <li>
                        <a asp-controller="AdminPanel" asp-action="MusteriGoruntule">Müşteri Bilgileri Görüntüle</a>
                    </li>
                    <li><a asp-controller="AdminPanel" asp-action="MusteriEkle">Müşteri Ekle</a></li>
                </ul>
            </li>



            <li>
                <div class="icon-link">
                    <a href="#">
                        <i class="fab fa-blogger"></i>
                        <span class="link-name">Uçak Verileri</span>
                    </a>
                    <i class="fas fa-caret-down arrow"></i>
                </div>
                <ul class="sub-menu">
                    <li>
                        <a asp-controller="AdminPanel" asp-action="UcakBilgileriGoruntule">Uçak Bilgileri Görüntüle</a>
                    </li>
                    <li><a asp-controller="AdminPanel" asp-action="UcakEkleEkrani">Uçak Ekle</a></li>
                </ul>
            </li>

            <li>
                <div class="icon-link">
                    <a href="#">
                        <i class="fab fa-blogger"></i>
                        <span class="link-name">Uçuş Verileri</span>
                    </a>
                    <i class="fas fa-caret-down arrow"></i>
                </div>
                <ul class="sub-menu">
                    <li><a asp-controller="AdminPanel" asp-action="UcusBilgileriGoruntule">Uçuş Bilgileri Görüntüle</a></li>
                    <li><a asp-controller="AdminPanel" asp-action="UcusSeferiEkle">Uçuş Seferi Ekle</a></li>
                </ul>
            </li>

            <li>
                <div class="icon-link">
                    <a href="#">
                        <i class="fab fa-blogger"></i>
                        <span class="link-name">Bilet Verileri</span>
                    </a>
                    <i class="fas fa-caret-down arrow"></i>
                </div>

                <ul class="sub-menu">
                    <li><a asp-controller="AdminPanel" asp-action="BiletGoruntule">Bilet Bilgileri Görüntüle</a></li>
                    <li><a href="#">Bilet Ekle</a></li>
                </ul>
            </li>
            <li>
                <div class="icon-link">
                    <a href="#">
                        <i class="fab fa-blogger"></i>
                        <span class="link-name">Kullanıcı Yetki Verileri</span>
                    </a>
                    <i class="fas fa-caret-down arrow"></i>
                </div>
                <ul class="sub-menu">
                    <li><a asp-controller="AdminPanel" asp-action="YetkiliKullaniciEkrani">Yetkili Kullanıcı Listesi</a></li>
                    <li><a asp-controller="AdminPanel" asp-action="UcusSeferiEkle">Uçuş Seferi Ekle</a></li>
                </ul>
            </li>


                <li>
                        <a asp-action="Logout" asp-controller="Auth">
                            <span style="color:white;font-size:12px;font-weight:500;padding:10px;">Çıkış Yap</span>
                        </a>


                    </li>

            <li>
                <a asp-action="Logout" asp-controller="Auth">
                    <span style="color:white;font-size:12px;font-weight:500;padding:10px;">Bilgilerim</span>
                </a>


            </li>










        </ul>
    </div>


    <div class="home-section">
        <div class="home-content">
            <div>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>


    <script src="~/js/panel.js"></script>
</body>
</html>