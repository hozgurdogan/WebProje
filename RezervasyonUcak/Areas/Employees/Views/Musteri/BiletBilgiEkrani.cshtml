@{
    Layout = "~/Areas/Employees/Views/Shared/Layout.cshtml";


}
@model RezervasyonUcak.Areas.Employees.Models.Dto.BiletResponse;

    
    <link rel="stylesheet" href="~/css/ticket.css" />

<main class="ticket-system">
 
    <div class="receipts-wrapper">
        <div class="receipts">
            <div class="receipt">

                <div class="item">
                    <span>@Model.FirmaAdi</span>
                    <h3></h3>
                </div>
                <div class="route">
                    <h2>@Model.BaslangicKonum</h2>
                    <svg class="plane-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 510 510">
                        <path fill="#3f32e5" d="M497.25 357v-51l-204-127.5V38.25C293.25 17.85 275.4 0 255 0s-38.25 17.85-38.25 38.25V178.5L12.75 306v51l204-63.75V433.5l-51 38.25V510L255 484.5l89.25 25.5v-38.25l-51-38.25V293.25l204 63.75z" />
                    </svg>
                    <h2>@Model.VarisKonum</h2>
                </div>
                <div class="details">
                    <div class="item">
                        <span>Yolcu</span>
                        <h3>@Model.YolcuAdi @Model.YolcuSoyadi</h3>

                    </div>
                    <div class="item">
                        <span>Uçak Model No</span>
                        <h3>@Model.UcakModelNo</h3>
                    </div>
                    <div class="item">
                        <span>Uçuş Saatleri</span>
                        <h3>@Model.BaslangicSaat - @Model.BitisSaat</h3>
                    </div>
                    <div class="item">
                        <span>Tarih</span>
                        <h3></h3>
                    </div>
                    <div class="item">
                        <span>Bilet Fiyatı</span>
                        <h3>@Model.BiletFiyat TL</h3>
                    </div>
               
                    <div class="item">
                        <span>Koltuk Numarası</span>
                        <h3>@Model.KoltukNo</h3>
                    </div>
                </div>
            </div>
       
        </div>
    </div>
</main>


                